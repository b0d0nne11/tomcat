#!/bin/sh

export CATALINA_HOME=<%= node['tomcat']['home'] %>
export CATALINA_BASE=<%= node['tomcat']['base'] %>
export CATALINA_PID=<%= node['tomcat']['pid'] %>

exec 2>&1
exec \
  chpst -u <%= node['tomcat']['user'] %>:<%= node['tomcat']['group'] %> \
  <%= node['tomcat']['base'] %>/bin/catalina.sh run
